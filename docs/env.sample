# Supabase project
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="supabase-service-role-key"
SUPABASE_DB_PASSWORD="your-db-password"

# Stripe
STRIPE_SECRET_KEY="sk_live_or_test"
STRIPE_PUBLISHABLE_KEY="pk_live_or_test"
STRIPE_WEBHOOK_SECRET="whsec_..."

# Notification providers
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="onboarding@resend.dev"  # Use Resend's default for testing, or your verified domain
# Note: SMS notifications via Twilio coming soon
# Note: For production, verify your domain in Resend and use your own email (e.g., alerts@yourdomain.com)

# Frontend site
PUBLIC_SITE_URL="https://yellowsticker.app"

# Scraper
SCRAPER_USER_AGENTS='["Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_7)...","Mozilla/5.0 (iPhone; CPU iPhone OS 17_0 like Mac OS X)..."]'

# ScrapingBee API (primary - handles Cloudflare + JavaScript rendering)
SCRAPINGBEE_API_KEY="your_scrapingbee_api_key"  # Get from https://www.scrapingbee.com/
SCRAPINGBEE_WAIT="15000"  # Milliseconds to wait for JavaScript to execute (default: 15000, increased for better Cloudflare bypass)
SCRAPINGBEE_DAILY_LIMIT="1000"  # Daily request limit (adjust based on your ScrapingBee plan)
SCRAPINGBEE_MONTHLY_LIMIT="10000"  # Monthly request limit (adjust based on your ScrapingBee plan)

# ScraperAPI (fallback - used if ScrapingBee fails)
# Get from https://www.scraperapi.com/ - provides automatic Cloudflare bypass
SCRAPERAPI_API_KEY="your_scraperapi_api_key"  # Optional: fallback service if ScrapingBee is blocked

# Self-Hosted Scraper (final fallback - runs on your own VPS)
# See scraper-service/README.md for setup instructions
SELF_HOSTED_SCRAPER_URL="http://your-vps-ip:3000"  # URL of your self-hosted scraper service
SELF_HOSTED_SCRAPER_API_KEY="your_secret_api_key"  # API key for authentication

# Admin credentials (for monitor page authentication)
# Set these in Supabase Dashboard → Settings → Edge Functions → Secrets
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="changeme"  # Change this to a strong password!

# Provider limits
RESEND_DAILY_LIMIT="100"
RESEND_MONTHLY_LIMIT="3000"
SUPABASE_MONTHLY_USER_LIMIT="50000"
SUPABASE_DB_SIZE_LIMIT_BYTES="524288000"
STRIPE_HEALTH_LOOKBACK_DAYS="30"

